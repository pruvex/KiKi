  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./renderer",
    "declaration": false
  },
  "include": ["renderer/preload.ts"],
  "exclude": ["node_modules", "dist"]
}